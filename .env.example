# Django Secret Key (replace with a secure random string in production)
SECRET_KEY=your-secret-key-here

# Google OAuth2 Credentials (replace with actual credentials from Google Cloud Console)
GOOGLE_OAUTH2_CLIENT_ID=your-google-oauth2-client-id.apps.googleusercontent.com
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-oauth2-client-secret

# Django Settings
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Base URL of your application
BASE_URL=http://127.0.0.1:8000/

# Site Configuration
SITE_ID=1

# Email Configuration (change backend and settings as needed)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True

# Database Configuration (Uncomment and configure if needed)
# DATABASE_URL=sqlite:///db.sqlite3
# DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Language and Timezone
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# Email Verification Settings
ACCOUNT_EMAIL_VERIFICATION=mandatory
SOCIALACCOUNT_EMAIL_VERIFICATION=mandatory

# Redirect URLs
ACCOUNT_LOGOUT_REDIRECT_URL=/
LOGIN_REDIRECT_URL=/

# Social Account Settings
SOCIALACCOUNT_EMAIL_REQUIRED=True
SOCIALACCOUNT_QUERY_EMAIL=True
